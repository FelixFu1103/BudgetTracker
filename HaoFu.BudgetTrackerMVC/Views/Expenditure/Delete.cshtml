@model ApplicationCore.Models.Response.UserBudgetResponseModel


<div>
    <h2 class="align-content-center">Delete Expenditure Record</h2>
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Amount">Amount</label>
            <input asp-for="Amount" class="form-control" name="amount" value="@Model.Amount" readonly>
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control" name="description" value="@Model.Description" readonly>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Remarks">Remarks</label>
            <input asp-for="Remarks" class="form-control" name="remarks" value="@Model.Remarks" readonly>
            <span asp-validation-for="Remarks" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IncomeOrExpDate">ExpDate</label>
            <input type="Date" asp-for="IncomeOrExpDate" class="form-control" name="ExpDate" value="@Model.IncomeOrExpDate" readonly>
            <span asp-validation-for="IncomeOrExpDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Delete</button>
        <a href="##" onClick="history.go(-1); return false;"><button type="button" class="btn btn-secondary">Cancel</button></a>
    </form>
</div>