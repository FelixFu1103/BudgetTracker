@model List<ApplicationCore.Models.Response.UserCardResponseModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h2 class="text-center">Users</h2>
    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>JoinedOn</th>
            <th></th>
        </tr>
        @foreach (var user in @Model)
        {
            <partial name="_UserCard" model="user" />
        }
    </table>
</div>